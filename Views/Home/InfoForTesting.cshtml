@model Capacitarte.Models.InfoForTestingViewModel
@{
    ViewBag.Title = "Información para testing";
}

<h2>Información para testing</h2>

<div class="row">
    <div class="col-md-4">
        <h3>Empleados</h3>
        <ul class="table">
            @foreach (var emp in Model.Empleados)
            {
                <li>
                    <h4>@emp.Nombre @emp.Apellido</h4>
                    <ul class="table">
                        <li>Nombre: <b>@emp.Nombre</b></li>
                        <li>Apellido: <b>@emp.Apellido</b></li>
                        <li>Dirección: <b>@emp.Direccion</b></li>
                        <li>Gerencia: <b>@emp.Gerencia</b></li>
                        <li>Jefatura: <b>@emp.Jefatura</b></li>
                        <li>Convenio: <b>@emp.Convenio</b></li>
                    </ul>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Roles</h3>
        <ul class="table">
            @foreach (var rol in Model.Roles)
            {
                <li>@rol.Descripcion</li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Usuarios</h3>
        <ul class="table">
            @foreach (var usr in Model.Usuarios)
            {
                <li>
                    <h4>@usr.Username</h4>
                    <ul class="table">
                        <li>Username: <b>@usr.Username</b></li>
                        <li>Password: <b>@usr.Password</b></li>
                        <li>Empleado asociado: <b>@usr.Empleado.ToString()</b></li>
                        <li>
                            <p>Roles:</p>
                            <ul class="table">
                                @foreach (var rol in usr.Roles)
                                {
                                    <li><b>@rol.Rol.Descripcion</b></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </li>
            }
        </ul>
    </div>
</div>
