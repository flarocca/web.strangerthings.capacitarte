@using Capacitarte.Models
@model SelectRolViewModel
@{
    ViewBag.Title = "Ingresar Como";
}

<h2>Ingresar Como</h2>
<div>
    <div class="col-md-8">
        @using (Html.BeginForm("SelectRol", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            foreach (var item in Model.Items)
            {
                <div class="form-group">
                    @Html.RadioButtonFor(i => Model.SelectdedId, item.Descripcion)
                    @Html.Label(item.Descripcion, new { @class = "col-md-2 control-label" })
                </div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

